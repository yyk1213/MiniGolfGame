{

	
	D3DXMatrixTranslation(&matTranslation, Ball::vPosition.x, Ball::vPosition.y, Ball::vPosition.z);
	g_pd3dDevice->SetTransform(D3DTS_WORLD, &matTranslation)
		;pTempMesh->DrawSubset(0);
	return true;
}


